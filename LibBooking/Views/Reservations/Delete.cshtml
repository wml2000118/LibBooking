@model LibBooking.Models.Reservation

@{
    ViewData["Title"] = "Delete Reservation";
}

<h1>Delete Reservation</h1>

<h3>Are you sure you want to delete this reservation?</h3>
<div>
    <h4>Reservation</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Room ID
        </dt>
        <dd class="col-sm-10">
            @Model.RoomID
        </dd>
        <dt class="col-sm-2">
            Reservation Date
        </dt>
        <dd class="col-sm-10">
            @Model.ReservationDate.ToString("yyyy-MM-dd")
        </dd>
        <dt class="col-sm-2">
            Start Time
        </dt>
        <dd class="col-sm-10">
            @Model.StartTime
        </dd>
        <dt class="col-sm-2">
            End Time
        </dt>
        <dd class="col-sm-10">
            @Model.EndTime
        </dd>
        <dt class="col-sm-2">
            Email
        </dt>
        <dd class="col-sm-10">
            @Model.Email
        </dd>
    </dl>

    <form asp-action="Delete" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="ID" />
        <button type="submit" class="btn btn-danger">Delete</button> |
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
