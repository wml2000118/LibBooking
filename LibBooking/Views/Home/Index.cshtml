@{
    ViewData["Title"] = "Library Room Booking - Initial Page";
}

<div class="container">
    <h1>Welcome to the Library Room Booking System</h1>
    <p>Please choose one of the options below:</p>

    <div class="row mt-4">
        <div class="col-md-6">
            <h3>Check Room Availability</h3>
            <p>See which study rooms are available for booking.</p>
            <a href="@Url.Action("Index", "Reservations")" class="btn btn-primary btn-lg">Check Availability</a>

        </div>
        <div class="col-md-6">
            <h3>Contact the Librarians</h3>
            <p>If you have any questions, you can contact our librarians.</p>
            <a href="@Url.Action("Index", "Librarian")" class="btn btn-secondary btn-lg">Librarian Info</a>
        </div>
    </div>
</div>
