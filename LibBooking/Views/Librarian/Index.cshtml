    .librarian-image {
        max-width: 100px;
        margin-bottom: 10px;
        border-radius: 50%;
    }

    .clearfix::after {
        content: "";
        display: table;
        clear: both;
    }

    .book-appointment-container {
        text-align: center;
        margin-top: 40px;
        margin-bottom: 40px; /* Ensure there is space above the footer */
