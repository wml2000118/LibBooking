@model IEnumerable<LibBooking.Models.LibrarianAppointment>

@{
    ViewData["Title"] = "Manage Appointment Consultations";
}

<div class="card-header bg-secondary bg-gradient ml-0 py-3">
    <div class="row">
        <div class="col-12 text-center">
            <h2 class="text-white py-2">Manage Appointment Consultations</h2>
        </div>
    </div>
</div>

<table id="adminDashboardTable" class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>Librarian</th>
            <th>User Email</th>
            <th>Date</th>
            <th>Start Time</th>
            <th>End Time</th>
            <th>Inquiry</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    </tbody>
</table>

@section Scripts {
    <script src="~/js/manageAdmin.js"></script>
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const message = '@TempData["Message"]';  // No need to serialize this.
            const messageType = '@TempData["MessageType"]';  // No need to serialize.

            // Ensure both message and messageType are not empty before showing SweetAlert
            if (message && messageType) {
                Swal.fire({
                    icon: messageType === "success" ? 'success' : 'error',
                    title: messageType === "success" ? 'Success' : 'Error',
                    text: message,
                    showConfirmButton: true,
                    timer: 3000
                });
            }
        });
    </script>
}