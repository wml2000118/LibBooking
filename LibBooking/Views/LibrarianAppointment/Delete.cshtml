@model LibBooking.Models.LibrarianAppointment

@{
    ViewData["Title"] = "Delete Appointment";
}

<h1>Delete Appointment</h1>

<p>Are you sure you want to delete this appointment?</p>

<div>
    <h4>@Model.Librarian.Name</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            User Email
        </dt>
        <dd class="col-sm-10">
            @Model.UserEmail
        </dd>
        <dt class="col-sm-2">
            Appointment Date
        </dt>
        <dd class="col-sm-10">
            @Model.AppointmentDate.ToString("yyyy-MM-dd")
        </dd>
        <dt class="col-sm-2">
            Start Time
        </dt>
        <dd class="col-sm-10">
            @Model.StartTime.ToString(@"hh\:mm")
        </dd>
        <dt class="col-sm-2">
            End Time
        </dt>
        <dd class="col-sm-10">
            @Model.EndTime.ToString(@"hh\:mm")
        </dd>
        <dt class="col-sm-2">
            Notes
        </dt>
        <dd class="col-sm-10">
            @Model.Notes
        </dd>
    </dl>

    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" asp-for="ID" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="AdminDashboard" class="btn btn-secondary">Cancel</a>
    </form>
</div>
